public class JedidiahPrall_CalvinNguyen_06 {
    
        private static String INPUT_FILE = "Project_06_Input.txt";  // Input file, declared in main method
	private static String OUTPUT_FILE = "Project_04_Output.txt"; // Output file, declared in main method
        private static int array[];
	private static int length;
        
    public static void processInput (String input) {
        
        int lineNum = 0;
        int length = 100;
        int[] shellArray = new int[length];
        int[] quickSort = new int[length];
        File file;
        Scanner fileReader;
        
        try {
             
            file = new File(input);
            fileReader = new Scanner(file);
        
            while (fileReader.hasNext()) {
            shellArray[lineNum] = fileReader.nextInt();
            quickSort[lineNum] = shellArray[lineNum];
            lineNum++;
            }
        
            for (int i=0; i<quickSort.length; i++){
            System.out.println(quickSort[i]);
            
            }
        } catch (Exception e) {
            System.err.println("File \'" + INPUT_FILE + "\' not found.");
        }
        
        shellSort(shellArray);
        
    }
        
    private static void shellSort(int[] array) {
		int increment = array.length / 2;
		while (increment > 0) {
			for (int i = increment; i < array.length; i++) {
				int j = i;
				int temp = array[i];
				while (j >= increment && array[j - increment] > temp) {
					array[j] = array[j - increment];
					j = j - increment;
				}
				array[j] = temp;
			}
			if (increment == 2) {
				increment = 1;
			} else {
				increment *= (5.0 / 11);
			}
		}
              for (int j=0; j<array.length; j++){
                    System.out.println (array[j]);
                    
              }  
	}

	private static void quickSort(int[] array) {
		if (array == null || array.length == 0) {
			return;
		}
		array = array;
		length = array.length;
		sort(0, array.length - 1);
	}

	private static void sort(int lowIndex, int highIndex) {
		int low = lowIndex;
		int high = highIndex;
		int pivot = array[low + (high - low) / 2];

		while (low <= high) {
			while (array[low] < pivot) {
				low++;
			}
			while (array[high] > pivot) {
				high--;
			}
			if (low <= high) {
				swap(low,high);
				low++;
				high--;
			}
		}
		if (low < high)
			sort(lowIndex, high);
		if (low < high) {
			sort(low, highIndex);
		}

	}

	private static void swap(int lowIndex, int highIndex) {
		int temp = array[lowIndex];
		array[lowIndex] = array[highIndex];
		array[highIndex] = temp;
	}
        
        public static void generateReport (int[] array){
            int k=0;
            System.out.println (tenLine(array,k));
            
           
        }
        
        public static int tenLine (int[] array, int k) {
            
            
           return  
        }
              
        
        
    public static void main (String [] args) {
        
        INPUT_FILE = "Project_06_Input.txt";
        OUTPUT_FILE = "Project_04_Output.txt";
        
        processInput(INPUT_FILE);
        
        //generateReport();
        
}
    
}
